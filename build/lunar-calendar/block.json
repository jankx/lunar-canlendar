{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "jankx/lunar-calendar",
  "version": "1.0.1",
  "title": "Lunar Calendar",
  "category": "widgets",
  "icon": "calendar",
  "description": "Display interactive lunar calendar",
  "textdomain": "lunar-calendar",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./style-index.css",
  "style": "file:./style-index.css",
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "attributes": {
    "showTodayButton": {
      "type": "boolean",
      "default": false
    },
    "gregorianDayFontSize": {
      "type": "number",
      "default": 2
    },
    "lunarDayFontSize": {
      "type": "number",
      "default": 2
    },
    "gregorianIcon": {
      "type": "string",
      "default": "calendar-alt"
    },
    "lunarIcon": {
      "type": "string",
      "default": "moon"
    },
    "showIcons": {
      "type": "boolean",
      "default": true
    },
    "gregorianIconHtml": {
      "type": "string",
      "default": ""
    },
    "lunarIconHtml": {
      "type": "string",
      "default": ""
    }
  }
}

